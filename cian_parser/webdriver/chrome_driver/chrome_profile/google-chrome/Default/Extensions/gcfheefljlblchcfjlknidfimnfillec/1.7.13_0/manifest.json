{
   "background": {
      "scripts": [ "extension/bg.js" ]
   },
   "browser_action": {
      "default_icon": "images/icon_38_2_na.png",
      "default_popup": "popup/popup.html",
      "default_title": "Управление Яндекс.Музыкой/Радио: недоступно, нет открытых вкладок"
   },
   "commands": {
      "player_dislike": {
         "description": "Не нравится/не рекомендовать"
      },
      "player_info": {
         "description": "Информация о текущем треке"
      },
      "player_like": {
         "description": "Мне нравится"
      },
      "player_next": {
         "description": "Следующий трек",
         "global": true,
         "suggested_key": {
            "default": "MediaNextTrack"
         }
      },
      "player_play": {
         "description": "Воспроизведение/пауза",
         "global": true,
         "suggested_key": {
            "default": "MediaPlayPause"
         }
      },
      "player_prev": {
         "description": "Предыдущий трек (режим Я.Музыка)",
         "global": true,
         "suggested_key": {
            "default": "MediaPrevTrack"
         }
      },
      "player_repeat": {
         "description": "Переключить режим повтора (режим Я.Музыка)"
      },
      "player_seek_back": {
         "description": "Перемотать назад на 10сек"
      },
      "player_seek_fwd": {
         "description": "Перемотать вперед на 10сек"
      },
      "player_shuffle": {
         "description": "Переключить режим случайного проигрывания (режим Я.Музыка)"
      },
      "player_volume_down": {
         "description": "Уменьшить громкость"
      },
      "player_volume_toggle": {
         "description": "Выключить/включить звук"
      },
      "player_volume_up": {
         "description": "Увеличить громкость"
      }
   },
   "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",
   "description": "Расширение добавляет на панель браузера кнопку для управления плеером сервиса Яндекс.Музыка (Yandex.Music)",
   "icons": {
      "128": "images/icon_128.png",
      "16": "images/icon_16.png",
      "48": "images/icon_48.png"
   },
   "key": "",
   "manifest_version": 2,
   "name": "Яндекс.Музыка - управление плеером",
   "optional_permissions": [ "downloads", "downloads.shelf" ],
   "options_page": "options/index.html",
   "permissions": [ "activeTab", "tabs", "storage", "notifications", "https://music.yandex.ru/*", "https://radio.yandex.ru/*", "https://music.yandex.ua/*", "https://radio.yandex.ua/*", "https://music.yandex.by/*", "https://radio.yandex.by/*", "https://music.yandex.kz/*", "https://radio.yandex.kz/*", "https://*.yandex.net/*" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.7.13",
   "web_accessible_resources": [ "images/icon_128.png", "images/like.svg", "images/unlike.svg" ]
}
